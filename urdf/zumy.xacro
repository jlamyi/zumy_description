<?xml version="1.0"?>

<!-- zumy description-->
<robot name="zumy" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <static>false</static>
  <xacro:property name="body_height" value="0.1"/>
  <xacro:property name="body_length" value="0.4"/>
  <xacro:property name="body_width" value="0.2"/>
  <xacro:property name="chasis_height" value="0.1"/>
  <xacro:property name="wheel_thickness" value="0.03"/>
  <xacro:property name="wheel_radius" value="0.15"/>
  <!--value = ${chasis_height}-->
  <xacro:property name="wheel_center_height" value="0.1"/>
  <!--value = $(body_width + wheel_thickness/2)/2+0.05-->
  <xacro:property name="wheel_center_y" value="0.7"/>
  <xacro:property name="wheel_pos_x" value="0.15"/>
  <xacro:property name="caster_radius" value="0.1"/>

  <xacro:include filename="$(find zumy_description)/urdf/zumy.gazebo" />

  <link name="base_link">
    <visual>
      <geometry>
        <box size="${body_length} ${body_width} ${body_height}"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 ${chasis_height}"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>

   <visual name='caster_visual'>
     <origin rpy="0 0 0" xyz="-0.15 0 ${chasis_height}"/>
     <geometry>
       <sphere radius="${caster_radius}"/>
     </geometry>
     <material name="white">
       <color rgba="1 1 1 1"/>
     </material>
   </visual>

    <collision>
      <geometry>
        <box size="${body_length} ${body_width} ${body_height}"/>
      </geometry>
    </collision>


  <collision name='caster_collision'>
    <origin rpy="0 0 0" xyz="-0.15 0 ${chasis_height}"/>
    <geometry>
      <sphere radius="${caster_radius}"/>
    </geometry>
    <surface>
      <friction>
	<ode>
	  <mu>0</mu>
	  <mu2>0</mu2>
	  <slip1>1.0</slip1>
	  <slip2>1.0</slip2>
	</ode>
      </friction>
    </surface>
  </collision> 

    <inertial>
      <mass value="1"/>
      <inertia
	  ixx="1.0" ixy="0.0" ixz="0.0"
	  iyy="1.0" iyz="0.0"
	  izz="1.0"/>
    </inertial>
 
  </link>
  
  <link name="lwheel">
    <visual>
      <geometry>
        <cylinder length="${wheel_thickness}" radius="${wheel_radius}"/>
      </geometry>
      <origin rpy="0 1.5707 1.5707" xyz="0 ${-wheel_center_y} 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="${wheel_thickness}" radius="${wheel_radius}"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="1"/>
      <inertia
	  ixx="1.0" ixy="0.0" ixz="0.0"
	  iyy="1.0" iyz="0.0"
	  izz="1.0"/>
    </inertial>
  </link>
  
  <joint name="base_to_lwheel" type="continuous">
    <parent link="base_link"/>
    <child link="lwheel"/>
    <origin xyz="${wheel_pos_x} 0 ${wheel_center_height}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="rwheel">
    <visual>
      <geometry>
        <cylinder length="${wheel_thickness}" radius="${wheel_radius}"/>
      </geometry>
      <origin rpy="0 1.5707 1.5707" xyz="0 ${wheel_center_y} 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="${wheel_thickness}" radius="${wheel_radius}"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 1" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
	  ixx="1.0" ixy="0.0" ixz="0.0"
	  iyy="1.0" iyz="0.0"
	  izz="1.0"/>
    </inertial>
  </link>
  
  <joint name="base_to_rwheel" type="continuous">
    <parent link="base_link"/>
    <child link="rwheel"/>
    <origin xyz="${wheel_pos_x} 0 ${wheel_center_height}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  
  <!--link name="scanner">
    <visual>
      <geometry>
        <box size="0.015 0.045 0.015"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0.022 0 0.015"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>
  
  <joint name="base_to_scanner" type="fixed">
    <parent link="base_link"/>
    <child link="scanner"/>
    <origin xyz="0.105 0 0.22" rpy="0 0 0"/>
  </joint-->

  <!-- URDF and ros control bridge-->
  <transmission name="tran1">
    <type>hardware_interface</type>
    <!--type>transmission_interface/SimpleTransmission</type-->
    <joint name="base_to_lwheel">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="motor1">
      <!--hardwareInterface>EffortJointInterface</hardwareInterface-->
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="tran2">
    <type>hardware_interface</type>
    <!--type>transmission_interface/SimpleTransmission</type-->
    <joint name="base_to_rwheel">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="motor2">
      <!--hardwareInterface>EffortJointInterface</hardwareInterface-->
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  
</robot>




